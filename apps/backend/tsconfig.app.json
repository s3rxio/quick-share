{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": ["node", "@types/multer"],
    "emitDecoratorMetadata": true,
    "target": "es2021",

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/app/*"],
      "~/*": ["src/common/*"]
    }
  },
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"],
  "include": ["src/**/*.ts"]
}
